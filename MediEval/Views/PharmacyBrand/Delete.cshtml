@model PharmacyBrand

@{
    ViewData["Title"] = "Delete Pharmacy Brand";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DosageForm" class="control-label"></label>
                    <input asp-for="DosageForm" class="form-control" readonly />
                    <span asp-validation-for="DosageForm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NDC_Code" class="control-label"></label>
                    <input asp-for="NDC_Code" class="form-control" readonly />
                    <span asp-validation-for="NDC_Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="category" class="control-label"></label>
                    <input asp-for="category" class="form-control" readonly />
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete" asp-controller="PharmacyBrand" method="post">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>


