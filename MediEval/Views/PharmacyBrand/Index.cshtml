@model IEnumerable<PharmacyBrand>

@{
    ViewData["Title"] = "Pharmacy Brands";
}

<!Doctype html>
<html>
<head>
    <title>Pharmacy</title>

    <style>

        table {
            border-spacing: 5px 1rem;
        }

        .tab {
            margin-left: 2.5em
        }

        .center {
            text-align: center;
            margin: 100px;
        }

        table, th {
            
            border-collapse: collapse;
        }

         th, td {
            padding-left: 100px;
        }
        
        
    </style>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <h2 style="text-align:center">Welcome to the Pharmacist/Admin View</h2>
    <div class="row" style="margin-top:50px">
        <div class="d-flex align-items-center justify-content-center">
            <table cellspacing="10">
                <thead>
                    <tr>
                        <th id="Name">
                            <i class="fas fa-ribbon" style='font-size:48px;color:seagreen'></i>
                        </th>
                      
                        <th id="DosageForm">
                            <i class="fas fa-prescription-bottle" style='font-size:48px;color:seagreen'></i>
                        </th>
                        <th id="NDC_Code">
                            <i class="fas fa-info" style='font-size:48px;color:seagreen'></i>
                        </th>
                        <th id="category">
                            <i class="fas fa-tags" style='font-size:48px;color:seagreen'></i>
                        </th>
                        <th id="Action">
                            <i class="fas fa-tasks" style='font-size:48px;color:seagreen'></i>
                        </th>
                        
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.DosageForm)</th>
                        <th>@Html.DisplayNameFor(model => model.NDC_Code)</th>
                        <th>@Html.DisplayNameFor(model => model.category)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => i.Name)
                                
                            </td>
                            
                             <td class="align-middle">
                                @Html.DisplayFor(modelItem => i.DosageForm)
                                
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => i.NDC_Code)

                            </td>

                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => i.category)

                            </td>
                           
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@i.ID"><i class="bi bi-pencil-square"></i>Edit </a> &nbsp;
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@i.ID"><i class="bi bi-eye"></i>Details </a> &nbsp;
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@i.ID"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="margin-bottom:20px">
            @await Html.PartialAsync("_CreateItem", "PharmacyBrand")
        </div>
    </div>
    
</body>
</html>







