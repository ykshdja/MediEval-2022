@model Pharmacy

@{
    ViewData["Title"] = "Add a new Pharmacy";
}

<!doctype html>
<html>
<head>
    <title>Pharmacy</title>
    <script>
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
    <style>
       
    </style>
</head>
<body>
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1>Add a New Pharmacy</h1>
            </p>
            <div class="row space">
                <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview"/>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <label asp-for="PharmName" class="control-label"></label>
                        <input asp-for="PharmName" class="form-control" />
                        <span asp-validation-for="PharmName" class="text-danger"></span>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <label asp-for="PharmAddress" class="control-label"></label>
                        <input asp-for="PharmAddress" class="form-control" />
                        <span asp-validation-for="PharmAddress" class="text-danger"></span>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <label asp-for="PharmPhone" class="control-label"></label>
                        <input asp-for="PharmPhone" class="form-control" />
                        <span asp-validation-for="PharmPhone" class="text-danger"></span>
                    </div>
                    &nbsp;
                    &nbsp;
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>

