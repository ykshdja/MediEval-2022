<!DOCTYPE html>
<html lang="en">
<head>
    <style>

     
        #navbar-div{
            background: #1e5100;
            background: linear-gradient(90deg, rgba(252,252,252,1) 0%, rgba(232,243,229,1) 40%, rgba(30,81,0,0.9951330874146533) 100%);
            padding: 17px;
            margin-bottom:50px;
        }

        .navbar-inverse {
            background: transparent;
           
        }

            .navbar-inverse .navbar-toggle {
                background-color: seagreen;
                background: white;
                border:groove;
            }

                .navbar-inverse .navbar-toggle .icon-bar {
                    /*background-color: #A43E89;*/
                    
                }

                .navbar-inverse .navbar-toggle:hover, .navbar-inverse .navbar-toggle:focus {
                    background: #95b881;
    
                }

            .navbar-inverse .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
                color: #1e5100;
                background: #95b881;
                border-radius: 10px;
                
            }

            .navbar-inverse .navbar-toggle:hover .icon-bar {
                background: #1e5100;
            }

        .navbar-toggle {
        }

        .input-group{
            text-align: right;
        }



        body {
            background: #ddd;
            margin-bottom: 50px;
        }

        .form-control-borderless {
            border: none;
        }

            .form-control-borderless:focus {
                border: none;
                outline: none;
                box-shadow: none;
            }

            .form-control-borderless:hover {
                border: none;
                outline: none;
                box-shadow: none;
            }

            .form-control-borderless:active {
                border: none;
                outline: none;
                box-shadow: none;
            }


           .shopsymbol{
               text-align:right;
           }

        .login-btn{
            margin-right:10px;
        }
    </style>
    <script>
        
        const basicAutocomplete = document.querySelector('#search-autocomplete');
        const data = ['One', 'Two', 'Three', 'Four', 'Five'];
        const dataFilter = (value) => {
            return data.filter((item) => {
                return item.toLowerCase().startsWith(value.toLowerCase());
            });
        };

        new mdb.Autocomplete(basicAutocomplete, {
            filter: dataFilter
        });


    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MediEval</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="~/Images/icon-title.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediEval.styles.css" asp-append-version="true" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <div>
            <div class ="d-flex justify-content-start">
                <span><img src="~/Images/logo.png" alt="Medi-Eval Logo" /></span>
            </div>
            <div class="d-flex justify-content-end">
                <form class="form-inline my-2 my-lg-0" asp-controller="Medicine" asp-action="Filter" style="padding-right: 45px;">
                    <input name="searchString" type="text" class="form-control" placeholder="Search for a Medicine " aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
                        <i class="bi bi-search"></i>
                        </button>
                </form>
            </div>
         
        </div>
       
        <div id="navbar-div">
            <nav class="navbar navbar-inverse navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span><img  src="~/Images/icon2copy.jpg" alt="Medi-Eval Logo"/></span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">SHOP</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">SERVICES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">ABOUT US</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">CONTACT US</a>
                            </li>
                            <!--DROP DOWN-->
                            <li class="nav-item dropdown"> 
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i> Management
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-controller="Medicine" asp-action="Index"><i class="bi bi-capsule-pill"></i> Medicine</a></li>
                                        <li><a class="dropdown-item" asp-controller="Pharmacy" asp-action="Index"><i class="bi bi-prescription"></i> Pharmacy</a></li>
                                        <li><a class="dropdown-item" asp-controller="PharmacyBrand" asp-action="Index"><i class="bi bi-bag-plus-fill"></i> Brands</a></li>
                                    </ul>
                                </div>
                            </li>
                            

                        </ul>

                        <ul class="navbar-nav">
                            @await Component.InvokeAsync("ShoppingCartSummary")
                        </ul>

                        <partial name="_Identity.cshtml" />

                        <div class="login-btn">
                            <a class="btn btn-outline-light my-2 my-sm-0" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Log in
                            </a>

                            <a class="btn btn-outline-light my-2 my-sm-0" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>


                        </div>

                        <span style="padding: 5px;"></span>

                        @*User profile section*@
                        <div class="dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-person-badge"></i> Hello User
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="profile-btn">
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                        <i class="bi bi-list"></i> Orders
                                    </a>
                                </li>
                            </ul>
                        </div>
                        
                        @**
                            Log out
                        **@

                        <span style="padding: 5px;"></span>
                        <form asp-controller="Account" asp-action="Logout">
                            <button class="btn btn-outline-danger my-2 my-sm-0">
                                <i class="bi bi-box-arrow-in-right"></i> Log out
                            </button>
                        </form>


                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MediEval - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
