@model IEnumerable<Medicine>

@{
    ViewData["Title"] = "Product";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-success mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-success">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/Images/tylenol.jpg" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Brand: </b>@item.pharmaBrand.Name</p>
                            <p class="card-text"><b>Category: </b>@item.MedicineCategory</p>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Quantity: </b>@item.Quantity</p>
                            <p class="card-text"><b>Weight: </b>@item.weight</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>

                            <p class="card-text ">
                                <b>Status: </b>
                                @if (item.InStock == true)
                                {
                                    <span class="badge bg-success text-white">In Stock</span>
                                }
                                else 
                                {
                                    <span class="badge bg-danger text-white">Out of Stock</span>
                                }
                               
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString())</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>