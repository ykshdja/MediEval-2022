@model MediEval.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";

}

<html>
    <head>

    </head>
    <body>
    <h1 class="text-info">Forgot your Password?</h1>
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
                <h4>Enter your email.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success form-control">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    </body>
</html>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
